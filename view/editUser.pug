extends layout
block content
    form(id="form", method="post", action="/editUser/" + user.id)
        label UserName:
        input(class="textBox", type="text", name="userName", value = user.userName)
        br

        label Password:
        input(class="textBox", type="text", name="password", value = user.password)
        br

        label Avatar:
        select(class="textBox", name="eyes")
            each item in face.eyes
                option(value=item) #{item}
                
        select(class="textBox", name="nose")
            each item in face.nose
                option(value=item) #{item}

        select(class="textBox", name="mouth")
            each item in face.mouth
                option(value=item) #{item}
        input(type="color", name="color")
        br

        label email:
        input(class="textBox", type="text", name="email", value = user.email)
        br

        label age:
        input(class="textBox", type="text", name="age", value = user.age)
        br
        if(session.user != null)
            if(session.user.isAdmin == 'true')
                label Privlage:
                select(class="textBox", name="isAdmin")
                    option(select = user.isAdmin) #{user.isAdmin}
                    option(value="true") Admin
                    option(value="false") User
                br

        lable email:
        input(type="text", name="email", value = user.email)
        br
        lable age:
        input(type="text", name="age", value = user.age)

        input(class="textBox", type="submit", value="Change User")

extends layout

block content
    table(class="gridtable")
        tr
            th ID
            th Username
            th Password
            th Is Admin
            th avatar
            th Email
            th Age
            th
            th
            th
        each item in user
            tr
                td 
                    a(href="/details/" + item.id) #{item.id}
                td #{item.userName}
                td #{item.password}
                td #{item.isAdmin}
                td #{item.avatar}
                td #{item.email}
                td #{item.age}
                td 
                    a(href="/editUser/" + item.id) Edit
                td 
                    a(href="/deleteUser/data-" + item.id) Delete
                td 
                    a(href="/createPost/" + item.id) Post
    a(href="/createUser", class="button") Add new user

    table(class="gridtable")
        tr
            th ID
            th UserID
            th Username
            th UserAvi
            th Date
            th Message
            th
            th
        each item in post
            tr
                td 
                    a(href="/details/" + item.id) #{item.id}
                td #{item.ownerID}
                td #{item.ownerName}
                td #{item.ownerAvatar}
                td #{item.date}
                td #{item.message}
                td 
                    a(href="/editPost/" + item.id) Edit
                td 
                    a(href="/deletePost/" + item.id) Delete

extends layout

block content
    table(class="gridtable")
        tr
            th ID
            th Username
            th Password
            th Is Admin
            th avatar
            th Email
            th Age
            th
            th
        each item in user
            tr
                td 
                    a(href="/details/" + item.id) #{item.id}
                td #{item.userName}
                td #{item.password}
                td #{item.isAdmin}
                td #{item.avatar}
                td #{item.email}
                td #{item.age}
                td 
                    a(href="/edit/" + item.id) Edit
                td 
                    a(href="/delete/" + item.id) Delete
    a(href="/create") Add new user
